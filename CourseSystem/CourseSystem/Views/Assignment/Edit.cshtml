@using UI.ViewModels.AssignmentViewModels
@using Core.Enums
@model EditAssignmentViewModel



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Assignment</title>
    <!-- Add Bootstrap CSS link here -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"]</span>
        </div>
    }
    <!-- Navbar -->
    <div class="navbar-container">
        <!-- Your navbar content goes here -->
    </div>

    <!-- Main Content Container -->
    <div class="main-container">
        <section class="space-sm">
            <div class="container">
                <div class="row mb-5">
                    <!-- Your other content goes here -->
                </div>

                <!-- Card for Create New Assignment Form -->
                <div class="row flex-md-row card card-md">
                    <div class="card-body bg-light">
                        <div class="text-center mb-5">
                            <h1 class="h2 mb-2">Edit assignment</h1>
                        </div>

                        <!-- Assignment Creation Form -->
                        <div class="row justify-content-center">
                            <div class="col-12 col-lg-6">
                                <form method="post" asp-controller="Assignment" asp-action="Edit" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" id="GroupId" name="GroupId" value="@Model.GroupId" />
                                    <!-- Assignment Details Inputs -->
                                    <div class="form-row form-group">
                                        <div class="col mb-3">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="col mb-3">
                                            <label asp-for="Description" class="control-label"></label>
                                            <textarea asp-for="Description" class="form-control custom-textarea" rows="5"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row form-group">
                                        <div class="col mb-3">
                                            <label asp-for="StartDate" class="control-label"></label>
                                            <input asp-for="StartDate" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local">
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>
                                        <div class="col mb-3">
                                            <label asp-for="EndDate" class="control-label"></label>
                                            <input asp-for="EndDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local">
                                            <span asp-validation-for="EndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <h6>Choose assignment files: </h6>
                                    <!-- File Upload Input -->
                                    @if (Model.AttachedFilesCheckBoxes.Any())
                                    {
                                        foreach(var fileCheckBoxes in Model.AttachedFilesCheckBoxes)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       value="@fileCheckBoxes.Value.Url"
                                                       name="ResponsibleUsers"
                                                       id="checkbox_@fileCheckBoxes.Value.Url"
                                                       checked="@fileCheckBoxes.IsActive">
                                                <label class="form-check-label" for="checkbox_@fileCheckBoxes.Value.Url">
                                                    @fileCheckBoxes.Description
                                                </label>
                                            </div>
                                        }
                                    }
                                    <hr/>
                                    <h6>Uploud new files: </h6>
                                    <div class="form-group mb-3">
                                        <label for="NewAddedFiles">Select File(s):</label>
                                        <input asp-for="NewAddedFiles" type="file" class="form-control-file" id="NewAddedFiles" name="NewAddedFiles" multiple>
                                    </div>
                                    <!-- Submit Button -->
                                    <div class="form-row form-group">
                                        <div class="col">
                                            <input class="btn btn-outline-primary" type="submit" value="Edit" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Add Bootstrap JS and other scripts here if needed -->
    <!-- This script is for Bootstrap's JavaScript plugins, including the ones used in the form -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
