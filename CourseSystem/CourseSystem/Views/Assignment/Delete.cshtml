@using UI.ViewModels.AssignmentViewModels
@model Assignment

<div class="container align-left">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"]</span>
        </div>
    }
    <div class="row">
        <div class="mbr-white col-md-7 mt-4">
            <h4 class="mbr-section-title mbr-semibold pb-2 mbr-fonts-style display-4">
                Are you sure that do you want to delete assigment (@Model.Name)?
            </h4>
            <div class="form-group">
                <form asp-controller="Assignment" asp-action="Delete" method="post">
                    <input type="submit" value="Confirm" class="btn btn-outline-danger" for="danger-outlined"/>
                    <a class="btn btn-outline-success" for="success-outlined" asp-controller="Assignment" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>