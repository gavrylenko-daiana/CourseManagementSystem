@model Core.Models.Group

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Group Details
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p><strong>Start Date:</strong> @Model.StartDate.ToString("dd/MM/yyyy")</p>
            <p><strong>End Date:</strong> @Model.EndDate.ToString("dd/MM/yyyy")</p>

            @if (Model.EducationMaterials != null && Model.EducationMaterials.Count > 0)
            {
                <h6>Education Materials:</h6>
                <ul>
                    @foreach (var material in Model.EducationMaterials)
                    {
                        <li>@material.Name</li>
                    }
                </ul>
            }
            else
            {
                <p>No education materials found for this group.</p>
            }

            @if (Model.Assignments != null && Model.Assignments.Count > 0)
            {
                <h6>Assignments:</h6>
                <ul>
                    @foreach (var assignment in Model.Assignments)
                    {
                        <li>@assignment.Name</li>
                    }
                </ul>
            }
            else
            {
                <p>No assignments found for this group.</p>
            }

            @if (Model.UserGroups != null && Model.UserGroups.Count > 0)
            {
                <h6>Users:</h6>
                <ul>
                    @foreach (var userGroup in Model.UserGroups)
                    {
                        <li>@userGroup.AppUser.FirstName</li>
                    }
                </ul>
            }
            else
            {
                <p>No users found for this group.</p>
            }
            
            <div class="btn-group" role="group">
                <a href="@Url.Action("Edit", "Group", new { id = Model.Id })" class="btn btn-primary">Edit Group</a>
                <a href="@Url.Action("Delete", "Group", new { id = Model.Id })" class="btn btn-danger">Delete Group</a>
            </div>
        </div>
    </div>
</div>