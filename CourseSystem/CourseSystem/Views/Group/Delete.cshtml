@model Core.Models.Group

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Delete Group
        </div>
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete the group '@Model.Name'?</h5>
            <form asp-action="DeleteConfirmed" asp-controller="Group" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Details", "Group", new { id = Model.Id })" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>