@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<UI.ViewModels.StudentSelectionViewModel>


@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span>@TempData["Error"]</span>
    </div>
}
<form method="post" asp-action="ConfirmSelection">
    <input type="hidden" name="groupId" value="@ViewBag.GroupId" />
    <input type="hidden" name="approved" value="@ViewBag.Approved" />
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                Select Students (Maximum 20)
            </div>
            <div class="card-body">
                <ul>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <li>
                            <input type="checkbox" asp-for="@Model[i].IsSelected"/>
                            @Model[i].FirstName @Model[i].LastName
                            <input type="hidden" asp-for="@Model[i].Id"/>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>