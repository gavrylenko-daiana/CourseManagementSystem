@model List<UI.ViewModels.CourseViewModel>
<table>
    <tr>
        <th>Name</th>
    </tr>
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="1">No courses found.</td>
        </tr>
    }
    else
    {
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
            </tr>
        }
    }
</table>
<a href="@Url.Action("Create")">Create New Course</a>