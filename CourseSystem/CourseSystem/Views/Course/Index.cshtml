@model List<UI.ViewModels.CourseViewModel>

<div class="container mt-4">
    <div class="row">
        @if (Model.Count == 0)
        {
            <div class="col">
                <div class="alert alert-warning">No courses found.</div>
            </div>
        }
        else
        {
            @foreach (var course in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@course.Name</h5>
                            <!-- Add other course information here -->
                            <a href="@Url.Action("Details", new { id = course.Id })" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</p>
