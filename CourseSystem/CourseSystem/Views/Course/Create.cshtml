@model UI.ViewModels.CourseViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Course</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <style>
        body {
            background-color: #f7f7f7;
        }
    </style>
</head>
<body>
    <div class="ui container" style="margin-top: 20px;">
        <div class="ui centered card" style="width: 400px;">
            <div class="content">
                <div class="header">
                    Create New Course
                </div>
            </div>
            <div class="content">
                @using (Html.BeginForm())
                {
                    <div class="ui form">
                        <div class="field">
                            <label>@Html.LabelFor(model => model.Name)</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "ui input" })
                        </div>

                        @if (TempData["Error"] != null)
                        {
                            <div class="ui negative message">
                                <p><b>Sorry!</b> - @TempData["Error"]</p>
                            </div>
                        }

                        <button type="submit" class="ui primary button">Create</button>
                        <a href="@Url.Action("Index", "Course")" class="ui button">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>




