@model UI.ViewModels.CourseViewModel
@using (Html.BeginForm())
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>

        @if (!string.IsNullOrEmpty(ViewData["CreatingError"] as string))
        {
            <span style="color: red;">@ViewData["CreatingError"]</span>
        }
        
        <input type="submit" value="Create" class="btn btn-primary" />
        
        @* <a href="@Url.Action("CollectGroup", "YourControllerName")" class="btn btn-secondary">Add Group</a> *@
        @* <a href="@Url.Action("CollectUser", "YourControllerName")" class="btn btn-secondary">Add User</a> *@
        @* <a href="@Url.Action("CollectMaterial", "YourControllerName")" class="btn btn-secondary">Add Material</a> *@
    </div>
}