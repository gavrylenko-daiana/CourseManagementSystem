@model Core.Models.Course

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Delete Group
        </div>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete the group '@Model.Name'?</h5>
            <form asp-action="DeleteConfirmed" asp-controller="Course" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Index", "Course")" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>