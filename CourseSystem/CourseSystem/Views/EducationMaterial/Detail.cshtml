    @*       PDFObject.embed(pdfUrl, container); *@
    @*     </script> *@
    @* </div> *@
    
    <div id="pdf-container">
        <object data="@url" type="application/pdf" width="100%" height="600px">
            <p>Your browser does not support displaying PDF files. You can <a href="@url">download file here</a>.</p>
        </object>
    </div>
}
else if (supportedWordExtensions.Contains(fileExtension))
{
    <p>Your browser does not support displaying WORD files. You can <a href="@url">download file here</a>.</p>
    @* <div id="word-container"> *@
    @*     <iframe src="https://docs.google.com/gview?url=@url&embedded=true" style="width: 100%; height: 600px;"></iframe> *@
    @* </div> *@
    @* <br> <hr/> *@
    @* <iframe src="https://view.officeapps.live.com/op/view.aspx?src=@url" style="width: 100%; height: 600px;"></iframe> *@
    @* *@
