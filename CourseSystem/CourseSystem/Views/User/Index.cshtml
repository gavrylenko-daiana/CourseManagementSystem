@using Core.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Core.Enums
@model AppUser

<!DOCTYPE html>
<html>
<head>
    <title>User Profile</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .image-block {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header text-center">
                    <h4>User Profile</h4>
                </div>
                @if (TempData["Error"] != null)
                {
                    <div class="col-md-12 alert alert-danger">
                        <span><b>Sorry!</b> - @TempData["Error"]</span>
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <p class="text-success">@TempData["SuccessMessage"]</p>
                }
                @if(@Model.ProfileImage != null)
                {
                    <div class="image-block">
                            <img src="@Model.ProfileImage.Url" alt="@Model.ProfileImage.Name" class="rounded-circle img-fluid" style="width: 200px;">
                    </div>
                }                
                <div class="card-body">
                    <div class="form-group py-2">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" id="FirstName" value="@Model.FirstName" readonly>
                    </div>
                    <div class="form-group py-2">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" id="LastName" value="@Model.LastName" readonly>
                    </div>
                    <div class="form-group py-2">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" id="Email" value="@Model.Email" readonly>
                    </div>
                    @if (Model.BirthDate.HasValue)
                    {
                        <div class="form-group py-2">
                            <label asp-for="BirthDate" class="control-label"></label>
                            <input asp-for="BirthDate" class="form-control" id="BirthDate" type="date" readonly>
                        </div>
                    }
                    @if (Model.University != null)
                    {
                        <div class="form-group py-2">
                            <label asp-for="University" class="control-label"></label>
                            <input asp-for="University" class="form-control" id="University" value="@Model.University" readonly>
                        </div>
                    }
                    @if (Model.Telegram != null)
                    {
                        <div class="form-group py-2">
                            <label asp-for="Telegram" class="control-label"></label>
                            <input asp-for="Telegram" class="form-control" id="Telegram" value="@Model.Telegram" readonly>
                        </div>
                    }
                    @if (Model.GitHub != null)
                    {
                        <div class="form-group py-2">
                            <label asp-for="GitHub" class="control-label"></label>
                            <input asp-for="GitHub" class="form-control" id="GitHub" value="@Model.GitHub" readonly>
                        </div>
                    }
                    <div class="form-group py-2">
                        <label asp-for="Role" class="control-label"></label>
                        <input asp-for="Role" class="form-control" id="Role" value="@Model.Role.ToString()" readonly>
                    </div>
                    @*@if (@Model.UserCourses.Any())
                    {
                        <div class="form-group py-2">

                            <label asp-for="UserCourses">Your courses</label>
                            <ul class="list-group">
                                @foreach (var course in Model.UserCourses)
                                {
                                    <li class="list-group-item">@course.Course.Name</li>
                                }
                            </ul>
                        </div>
                    }
                    @if (@Model.UserGroups.Any())
                    {
                        <div class="form-group py-2">
                            <label asp-for="UserGroups">Your groups</label>
                            <ul class="list-group">
                                @foreach (var group in Model.UserGroups)
                                {
                                    <li class="list-group-item">@group.Group.Name</li>
                                }
                            </ul>
                        </div>
                    }
                    @if (@Model.UserAssignments.Any())
                    {
                        <div class="form-group py-2">
                            <label asp-for="UserAssignments">Your assignments</label>
                            <ul class="list-group">
                                @foreach (var assignments in Model.UserAssignments)
                                {
                                    <li class="list-group-item">@assignments.Assignment.Name</li>
                                }
                            </ul>
                        </div>
                    }*@
                    @if (User.IsInRole(AppUserRoles.Admin.ToString()))
                    {
                        <div class="form-group py-2">
                            <label>Your Functions:</label>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <a class="nav-link text-dark btn btn-outline-primary" asp-controller="Account" asp-action="RegisterNewAdmin">Add new Admin</a>
                                </li>
                            </ul>
                        </div>                          
                    }
                    <div class="py-2">
                        <a class="nav-link text-dark btn btn-outline-primary" asp-controller="User" asp-action="Edit">Edit</a>
                    </div>
                    <div class="py-2">
                        <a class="nav-link text-dark btn btn-outline-danger" asp-controller="User" asp-action="Delete">Delete account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>